{
    "scopeName": "source.solitude",
    "patterns": [
        {
            "name": "comment.line",
            "match": "^\\s*\\.\\s.*$"
        },
        {
            "name": "comment.block",
            "begin": "^\\s*\\.\\.\\.$",
            "end": "^\\s*\\.\\.\\.$"
        },
        {
            "name": "keyword.control",
            "match": "\\b(var|if|fi|func|cnuf|call|input|while|done|!!|\\{\\}|\\}\\{)\\b"
        },
        {
            "name": "variable.other",
            "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*"
        },
        {
            "name": "string.quoted.double",
            "begin": "\"",
            "end": "\""
        }
    ],
    "repository": {},
    "injections": {}
}